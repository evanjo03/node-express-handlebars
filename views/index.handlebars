<div class="container-fluid top mb-3">
  <h1 class="text-center"><span class="fa fa-fire"></span>Eat Da Burger</h1>
  <div class="text-center">
    <h5>Eat one of the burgers below, or request a new burger.</h5>
  </div>
</div>

<div class="container main-content">
  <div class="row">
    <div class="col-4 text-center">
      <div class="header text-center">
        <h6>BURGERS UNEATEN</h6>
      </div>

      {{#each burgers}}
      {{#unless devoured}}
      <div class="card mt-4 mb-4 p-2">
        <img class="card-img-top img-responsive" src="{{burger_image}}" alt="Burger">
        <div class="card-body">
          <h5 class="card-title">{{burger_name}}</h5>
          <button type="button" class="change-devoured btn btn-primary m-1" data-id="{{id}}"
            data-newDevoured="{{devoured}}">
            Eat Da Burger!
          </button>
          <button class="delete btn btn-danger" data-id="{{id}}">
            X
          </button>
        </div>
      </div>
      {{/unless}}
      {{/each}}
    </div>
    <div class="col-4 text-center">
      <div class="header text-center">
        <h6>ADD A NEW BURGER</h6>
      </div>
      <div class="card mt-4 mb-4 p-2">
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="bg">Burger Name:</label>
              <input type="text" class="form-control" id="bg" style="font-size:.7rem" placeholder="Enter burger here">
            </div>
            <button type="button" class="btn btn-primary" id="new-burger" type="submit">Add Burger</button>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="header text-center">
        <h6>BURGERS EATEN</h6>
      </div>
      {{#each burgers}}
      {{#if devoured}}
      <div class="card mt-4 mb-4 p-2">
        <img class="card-img-top img-responsive" src="{{burger_image}}" alt="Burger">
        <div class="card-body">
          <h5 class="card-title">{{burger_name}}</h5>
          <button class="delete btn btn-danger m-1" data-id="{{id}}">
            Delete
          </button>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>

